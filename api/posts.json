---
layout: null
---
{
  "posts": [
    {% for post in site.posts %}
    {
      "title": {{ post.title | jsonify }},
      "url": "{{ post.url | relative_url }}",
      "excerpt": {{ post.excerpt | strip_html | truncatewords: 15 | jsonify }},
      "date": "{{ post.date | date_to_string }}",
      "image": {% if post.image %}"{{ post.image }}"{% else %}null{% endif %},
      "author": {% if post.author %}"{{ site.authors[post.author].display_name }}"{% else %}"{{ site.author }}"{% endif %},
      "featured": {% if post.featured %}true{% else %}false{% endif %}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "total": {{ site.posts.size }}
}